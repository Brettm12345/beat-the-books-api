{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": ".build",
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "types/"],
    "paths": {
      "@generated/*": ["src/generated/*"],
      "@util/*": ["src/util/*"],
      "@context": ["src/context.ts"]
    },
    "plugins": [{ "transform": "ts-optchain/transform" }]
  },
  "exclude": ["node_modules", "prisma/seed.ts"],
  "include": ["src/**/*.ts", ".webpack/*.ts"]
}
